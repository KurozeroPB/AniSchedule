{
    "extends": "./node_modules/gts/tsconfig-google.json",
    "compilerOptions": {
        "target": "esnext",
        "lib": [
            "esnext"
        ],
        "baseUrl": ".",
        "noImplicitAny": true,
        "noImplicitReturns": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "rootDir": ".",
        "outDir": "build",
        "typeRoots": ["./node_modules/@types", "./src/@types"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}

